<UserControl x:Class="PetShop.UserControls.Heading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PetShop.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    
    <Grid>
        
        
        <Button x:Name="BackBtn" Height="30" Width="100" Command="NavigationCommands.BrowseBack" HorizontalAlignment="Left" Margin="30,10,0,0"  >Back</Button>
        <Button x:Name="LogoutBtn" Height="30" Width="100" HorizontalAlignment="Right" Margin="0,10,30,0"  Command="{Binding TheCommand}"
        CommandParameter="{Binding}"
        Visibility="{Binding RelativeSource={RelativeSource Self},
                             Path=IsEnabled,
                             UpdateSourceTrigger=PropertyChanged,
                             Converter={StaticResource BooleanToVisibilityConverter}}">Logout</Button>

    </Grid>
</UserControl>
