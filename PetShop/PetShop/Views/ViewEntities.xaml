<Page x:Class="PetShop.Views.ViewEntities"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:UserControl="clr-namespace:PetShop.UserControls"
      xmlns:local="clr-namespace:PetShop.Views"
      mc:Ignorable="d" 
      
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewEntities">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="139*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="267*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <UserControl:Heading Grid.Row="0" Grid.ColumnSpan="2"/>
        <DataGrid x:Name="DisplayGrid" Grid.Row="2" Grid.ColumnSpan="2"></DataGrid> 
        <ComboBox x:Name="RoleBox" Grid.Row="1" Grid.Column="1" Margin="10" SelectionChanged="RoleBox_SelectionChanged">
            <ComboBoxItem Content="Staff" IsSelected="True"/>
            <ComboBoxItem Content="Customers"/>
            <ComboBoxItem Content="Pets"/>
        </ComboBox>
        <StackPanel Orientation="Horizontal" Grid.Row="3">
            <Button x:Name="AddBtn" Content="Add New" Padding="14,10" Margin="10" Click="AddBtn_Click" />
            <Button x:Name="UpdateBtn" Content="Update" Padding="14,10" Margin="10" />
            <Button x:Name="DeleteBtn" Content="Delete" Padding="14,10" Margin="10" />
            <Button x:Name="RefreshBtn" Content="Refresh" Padding="14,10" Margin="10" />
        </StackPanel>
    </Grid>
</Page>
