<Page x:Class="PetShop.Views.AddPetScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Add Pet"
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.RowSpan="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Grid.ColumnSpan="2" Margin="5" BorderThickness="1" BorderBrush="Black">
                <StackPanel Margin="10">
                    <Label Content="Enter New Pet Details"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="5"/>

                    <Grid x:Name="NewPetDataGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Pet Name -->
                        <Label Grid.Row="0" Grid.Column="0" Content="Pet Name"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Pet Type (required) -->
                        <Label Grid.Row="1" Grid.Column="0" Content="Type"/>
                        <ComboBox x:Name="TypeBox"
                                  Grid.Row="1" Grid.Column="1"
                                  ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Page}, Path=Tag}"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Id"
                                  SelectedValue="{Binding TypeId, Mode=TwoWay}"/>

                        <!-- Customer (optional) -->
                        <Label Grid.Row="2" Grid.Column="0" Content="Customer (Optional)"/>
                        <ComboBox x:Name="CustomerBox"
                                  Grid.Row="2" Grid.Column="1"
                                  DisplayMemberPath="FullName"
                                  SelectedValuePath="Id"
                                  SelectedValue="{Binding CustomerId, Mode=TwoWay}"/>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="10,15,10,0">
                            <Button Content="Add Pet" Width="120" Margin="5"
                                    Click="AddPet_Click"/>
                            <Button Content="Cancel" Width="120" Margin="5"
                                    Click="Cancel_Click"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
