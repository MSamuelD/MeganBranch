<Page x:Class="PetShop.Views.StaffOptions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Padding="16" BorderBrush="#EEE" BorderThickness="0,0,0,1">
            <TextBlock Text="Staff Management" FontSize="22" FontWeight="Bold"/>
        </Border>

        <StackPanel Grid.Row="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="320">

            <Button Content="Add New Staff"    Padding="14,10" Margin="0,0,0,10" Click="AddStaff_Click"/>
            <Button Content="Update Staff"     Padding="14,10" Margin="0,0,0,10" Click="UpdateStaff_Click"/>

        </StackPanel>
    </Grid>
</Page>

