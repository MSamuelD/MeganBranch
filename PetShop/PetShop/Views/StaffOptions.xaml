<Page x:Class="PetShop.Views.StaffOptions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- title -->
        <TextBlock Grid.Row="0"
               Text="Staff Options"
               FontSize="20" FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,40,0,16"/>

        <!-- button(3) -->
        <StackPanel Grid.Row="1"
                Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="260"
                >
            <Button Content="Add Staff"
                Height="40" Margin="0,6"
                Click="AddStaff_Click"/>
            <Button Content="Update Staff"
                Height="40" Margin="0,6"
                Click="UpdateStaff_Click"/>
            <Button Content="Delete Staff"
                Height="40" Margin="0,6"
                Click="DeleteStaff_Click"/>

        </StackPanel>
    </Grid>
</Page>


