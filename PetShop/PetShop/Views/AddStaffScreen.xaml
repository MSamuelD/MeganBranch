<Page x:Class="PetShop.Views.AddStaffScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add Staff">

    <Page.Resources>
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip"
                Value="{Binding RelativeSource={RelativeSource Self},
                                Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DatePicker">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip"
                Value="{Binding RelativeSource={RelativeSource Self},
                                Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Grid.ColumnSpan="2" Margin="5,5,5,-192" BorderThickness="1" BorderBrush="Black">
                <StackPanel Margin="5">
                    <Label Content="Enter New Staff Details" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" Margin="5"/>

                    <Grid Name="NewStaffDataGrid" DataContext="{Binding NewStaff}">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>

                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="First Name"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Last Name"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Label Grid.Row="2" Grid.Column="0" Content="Date of Birth"/>
                        <DatePicker x:Name="DOBDatePicker" Grid.Row="2" Grid.Column="1"
                        SelectedDate="{Binding DateOfBirth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Label Grid.Row="3" Grid.Column="0" Content="Phone Number"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Label Grid.Row="4" Grid.Column="0" Content="Street Number"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding StreetNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Label Grid.Row="5" Grid.Column="0" Content="Street Name"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding StreetName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Label Grid.Row="6" Grid.Column="0" Content="City"/>
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding City, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Label Grid.Row="7" Grid.Column="0" Content="State"/>
                        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding State, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Label Grid.Row="8" Grid.Column="0" Content="Post Code"/>
                        <TextBox Grid.Row="8" Grid.Column="1"
                        Text="{Binding ZipCode, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />


                        <Label Grid.Row="9" Grid.Column="0" Content="Country"/>
                        <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding Country, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Label Grid.Row="10" Grid.Column="0" Content="Email"/>
                        <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Label Grid.Row="11" Grid.Column="0" Content="Password"/>
                        <TextBox Grid.Row="11" Grid.Column="1" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Button Grid.Row="12" Grid.ColumnSpan="2" Width="150" Content="Add" Margin="5" Click="AddStaff"
                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
