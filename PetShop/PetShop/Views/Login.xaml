<Page x:Class="PetShop.Views.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="188*"/>
            <RowDefinition Height="86*"/>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="95*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <TextBlock HorizontalAlignment="Center" Text="Username:"></TextBlock>
            <TextBox x:Name="UserNameBox"  MaxWidth="123"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <TextBlock HorizontalAlignment="Center" Text="Password:"></TextBlock>
            <TextBox x:Name="PasswordBox" MaxWidth="123"></TextBox>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="3">
            <Button x:Name="LoginBtn"  Height="30" Width="60" Content="Login" Click="LoginBtn_Click"></Button>
            <Button x:Name="ShutdownBtn" Height="30" Width="60" Content="Shutdown"></Button>
        </StackPanel>
    </Grid>
</Page>
