<Window x:Class="PetShop.Views.WeatherScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop.Views" xmlns:UserControl="clr-namespace:PetShop.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Weather">

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="130*"/>
            <RowDefinition Height="57*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Weather Information" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="TestThing"  HorizontalAlignment="Left" Margin="10,23,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Grid.Row="1"/>
        <Button Grid.Row="2" x:Name="CloseBtn" Content="Thanks" Height="56" Width="130" Click="CloseBtn_Click"  />
        <Image x:Name="WeatherIcon" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Margin="10,10,0,0" Grid.Row="1" />
        <TextBlock x:Name="SuggestionTxt" HorizontalAlignment="Left" Margin="10,44,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
    </Grid>
</Window>
