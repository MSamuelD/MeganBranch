<Page x:Class="PetShop.Views.BookAppointment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookAppointment">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="623*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="119*"/>
            <RowDefinition Height="120*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Book an Appointment" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Height="31" Width="250"/>
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="29" Width="400">
            <TextBlock Text="Select Date:" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker Name="AppointmentDatePicker" Width="200" Height="25"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0">
            <TextBlock Text="Pet name:"></TextBlock>
            <TextBox></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="0">
            <TextBlock Text="Service:"></TextBlock>
            <TextBox></TextBox>
        </StackPanel>
    </Grid>
</Page>
