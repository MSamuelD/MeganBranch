<Page x:Class="PetShop.Views.BookAppointment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookAppointment">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="111*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="119*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Book an Appointment" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Height="31" Width="250"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" >
            <TextBlock Text="Select Date:" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker Name="AppointmentDatePicker" Width="200" Height="25"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1" >
            <TextBlock Text="Pet name:"></TextBlock>
            <TextBox></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="1">
            <TextBlock Text="Service:"></TextBlock>
            <TextBox TextWrapping="Wrap" AcceptsReturn="True" Height="50" SpellCheck.IsEnabled="True"></TextBox>
        </StackPanel>
        <Grid Grid.Row="5"  Grid.ColumnSpan="4" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Submit" Width="100" Grid.Column="0" Height="30" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="100" Grid.Column="2" Height="30" Margin="0,0,10,0"/>
        </Grid>
    </Grid>
</Page>
